generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Pet {
  id         String          @id @default(cuid())
  name       String
  animalType String
  ownerName  String
  dob        DateTime
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  records    MedicalRecord[]
}

model MedicalRecord {
  id         String   @id @default(cuid())
  petId      String
  pet        Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  recordType String   // "VACCINE" | "ALLERGY" | future types
  data       Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}